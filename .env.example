# Cloudflare R2 Configuration
# Copy this file to .env and fill in your values

# Your Cloudflare Account ID (found in Cloudflare dashboard)
R2_ACCOUNT_ID=340899c6dee19f5cb584faed64885ffc

# R2 API credentials (create in Cloudflare dashboard > R2 > Manage R2 API tokens)
R2_ACCESS_KEY_ID=xxxxxxx
R2_SECRET_ACCESS_KEY=xxxxxx

# R2 bucket name
R2_BUCKET_NAME=russ-fm-assets

# Public domain for assets (optional, will use R2 domain if not set)
R2_PUBLIC_DOMAIN=https://assets.russ.fm

# Note: No VITE_ variables needed - dev/prod detection is automatic
# Development always uses local images from /public/
# Production automatically uses R2 when import.meta.env.PROD is true